\providecommand{\@removefromreset}[2]{%
  \expandafter\let\csname c@#1\endcsname\@removefromreset@tmp
  \def\@elt##1{%
    \expandafter\ifx\csname c@##1\endcsname\@removefromreset@tmp\else
